{
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "eslint.enable": true,
    "eslint.alwaysShowStatus": true,
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "tailwindCSS.experimental.classRegex": [
        "tss`([^`]*)",
     ],
     "files.exclude": {
        "**/*.css": true,
        "**/*.css.map": true
      }
}